                        </AuthorizeView>
                        
                        <MudDivider />
                        <MudMenuItem Icon="@Icons.Material.Filled.Settings" 
                                    OnClick="NavigateToSettings">
                            الإعدادات / Settings
                        </MudMenuItem>
                        <MudMenuItem Icon="@Icons.Material.Filled.Logout" 
                                    OnClick="Logout">
                            تسجيل الخروج / Logout
                        </MudMenuItem>
                    </MenuItems>
                </MudMenu>
            </Authorized>
            <NotAuthorized>
                <MudStack Row="true" Spacing="2">
                    <MudButton Color="Color.Inherit" 
                              StartIcon="@Icons.Material.Filled.Login"
                              OnClick="NavigateToLogin">
                        تسجيل الدخول
                    </MudButton>
                    <MudButton Color="Color.Secondary" 
                              Variant="Variant.Filled"
                              StartIcon="@Icons.Material.Filled.PersonAdd"
                              OnClick="NavigateToRegister">
                        إنشاء حساب
                    </MudButton>
                </MudStack>
            </NotAuthorized>
        </AuthorizeView>

        <!-- Theme Toggle -->
        <MudIconButton Icon="@(isDarkMode ? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)"
                      Color="Color.Inherit"
                      OnClick="ToggleTheme"
                      Class="ml-2" />

        <!-- Language Toggle -->
        <MudIconButton Icon="@Icons.Material.Filled.Language"
                      Color="Color.Inherit"
                      OnClick="ToggleLanguage"
                      Class="ml-2" />
    </MudAppBar>


            <Authorized>
                <MudMenu Icon="@Icons.Material.Filled.AccountCircle" 
                        Color="Color.Inherit" 
                        Direction="Origin.BottomLeft"
                        OffsetY="true">
                    <ChildContent>
                        <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" 
                                      Color="Color.Inherit" />
                    </ChildContent>

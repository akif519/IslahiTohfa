            <MudImage Src="/images/islahi-tohfa-logo.png" 
                     Alt="Islahi Tohfa" 
                     Style="height: 40px; cursor: pointer;"
                     @onclick="NavigateHome" />
            <MudHidden Breakpoint="Breakpoint.SmAndDown">
                <MudText Typo="Typo.h6" Style="color: white; font-weight: bold;">
                    الإصلاحي تحفة

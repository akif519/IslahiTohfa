                        <MudMenuItem Icon="@Icons.Material.Filled.Bookmark" 
                                    OnClick="NavigateToBookmarks">
                            العلامات المرجعية / Bookmarks
                        </MudMenuItem>
                        <MudMenuItem Icon="@Icons.Material.Filled.History" 
                                    OnClick="NavigateToHistory">
                            سجل القراءة / Reading History
                        </MudMenuItem>
                        
